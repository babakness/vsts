{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "silent",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Monitor App Output",
      "args": [ "run", "dev" ],
      "suppressTaskName": true,
      "showOutput": "always"
    },
    {
      "taskName": "Watch & Build Project",
      "args": [ "run", "watch" ],
      "suppressTaskName": true,
      "showOutput": "always"
    }
  ]
}